{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "rootDir": "."
  },
  "include":["tmp/**/*.ts","e2e/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "angularCompilerOptions": {
    "genDir": "compiled",
    "skipMetadataEmit" : false

  }
}
